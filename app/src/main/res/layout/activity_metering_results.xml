<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MeteringResultsActivity">

    <GridLayout
        android:id="@+id/metering_results_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:columnCount="4">
        <TextView android:text="@string/total_power"
            android:layout_gravity="fill"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView android:text="@string/average_voltage"
            android:layout_gravity="fill"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView android:text="@string/start_level"
            android:layout_gravity="fill"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView android:text="@string/finish_level"
            android:layout_gravity="fill"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </GridLayout>

</RelativeLayout>